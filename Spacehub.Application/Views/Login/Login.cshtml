@{
  ViewData["Title"] = "Space Hub | Login";
}
<link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
<section>
  <header class="form-header">
    <a href="" class="link-home">
      <div class="div-image">
        <img src="~/images/examples/spacehub-logo.png" alt="logo" class="logo">
      </div>
      <h1>Space Hub</h1>
    </a>
    <nav>
      <ul class="list-link">
        <li>
          <a href="" class="nav-link">Objetos Astronómicos
            <span class="material-symbols-outlined">rocket</span>
          </a>
        </li>
        <li>
          <a href="" class="nav-link">Noticias Espaciales
            <span class="material-symbols-outlined">notifications_active</span>
          </a>
        <li>
        <li>
          <a href="" class="nav-link">Tienda Espacial
            <span class="material-symbols-outlined">shopping_bag</span>
          </a>
        </li>
      </ul>
    </nav>
  </header>
  <section class="main">
    <section class="form-img">
      <p class="title roboto-content-text">Tu viaje por el cosmos continua aquí</p>
      <p class="subtitle roboto-content-text">Inicia sesión y desbloquea una experiencia estelar hecha a tu medida, con acceso a contenidos únicos y un universo de conocimiento a tu alcance.</p>
    </section>
    <form action="">
      <p class="form-title">Iniciar sesión</p>
      <input type="text" placeholder="Nombre de usuario">
      <input type="password" placeholder="Contraseña">
      <button>Iniciar sesion</button>
      <p class="redirect-form-text">Si no tienes una cuenta registrate gratis <a href="" class="redirect-link">aqui</a></p>
    </form>
  </section>
</section>