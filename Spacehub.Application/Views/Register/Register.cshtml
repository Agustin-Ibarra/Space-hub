@{
  ViewData["Title"] = "Space Hub | Registro";
}
<link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
<section>
  <section class="main">
    <section class="form-img">
      <p class="title roboto-content-text">Tu viaje por el cosmos empieza aquí</p>
      <p class="subtitle roboto-content-text">Crea tu cuenta y forma parte de esta experiencia cósmica, donde cada exploración te acerca más a los secretos de las estrellas.</p>
    </section>
    <form action="">
      <p class="form-title">Registro</p>
      <input type="text" placeholder="Nombre completo">
      <input type="email" placeholder="Email">
      <input type="text" placeholder="Usuario">
      <input type="password" placeholder="Contraseña">
      <button>Registrarse</button>
      <p class="redirect-form-text">si ya estas registrado inicia sesión <a href="/login" class="redirect-link">aqui</a></p>
    </form>
  </section>
</section>