<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>@ViewData["Title"]</title>
  <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
  <link rel="shortcut icon" href="~/images/examples/spacehub-logo.png" type="image/x-icon">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link
    href="https://fonts.googleapis.com/css2?family=Raleway:ital,wght@0,100..900;1,100..900&family=Roboto:ital,wdth,wght@0,75..100,100..900;1,75..100,100..900&family=SUSE+Mono:ital,wght@0,100..800;1,100..800&display=swap"
    rel="stylesheet">
  <link rel="stylesheet"
    href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />

</head>

<body>
  <header>
    <div class="header-div">
      <a href="" class="link-home">
        <div class="div-image">
          <img src="~/images/examples/spacehub-logo.png" alt="logo" class="logo">
        </div>
        <h1>Space Hub</h1>
      </a>
      <nav>
        <ul class="list-link">
          <li>
            <a href="" class="nav-link">Objetos Astronómicos
              <span class="material-symbols-outlined">rocket</span>
            </a>
          </li>
          <li>
            <a href="" class="nav-link">Noticias Espaciales
              <span class="material-symbols-outlined">notifications_active</span>
            </a>
          <li>
          <li>
            <a href="" class="nav-link">Tienda Espacial
              <span class="material-symbols-outlined">shopping_bag</span>
            </a>
          </li>
        </ul>
      </nav>
    </div>
  </header>
  <div class="container">
    <main role="main" class="pb-3">
      @RenderBody()
    </main>
  </div>

  <footer class="border-top footer text-muted">
    <p class="copy-text">
      © 2025 Space Hub. Explorando el universo infinito.
    </p>
  </footer>
  @await RenderSectionAsync("Scripts", required: false)
</body>

</html>